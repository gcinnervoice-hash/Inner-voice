# ==========================================
# Inner Voice - Full Stack Environment Configuration
# ==========================================
# Copy this file to .env and fill in your actual values
# This file is used by the root docker-compose.yml

# ==========================================
# Server Ports
# ==========================================
FRONTEND_PORT=3000
BACKEND_PORT=5000
POSTGRES_PORT=5432
REDIS_PORT=6379

# ==========================================
# Environment
# ==========================================
NODE_ENV=production

# ==========================================
# Database Configuration (PostgreSQL)
# ==========================================
POSTGRES_DB=inner_voice_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme_secure_password_here

# ==========================================
# Redis Configuration
# ==========================================
REDIS_PASSWORD=
# Leave empty for no password in development
# For production, set a strong password

# ==========================================
# JWT Secrets (MUST CHANGE IN PRODUCTION!)
# ==========================================
# Generate secure random strings:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ==========================================
# OpenAI API Configuration
# ==========================================
# Get your API key from https://platform.openai.com/
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500

# ==========================================
# Security Configuration
# ==========================================
BCRYPT_SALT_ROUNDS=12
# CORS - Allowed frontend origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=50
RATE_LIMIT_PREMIUM_MAX=200

# ==========================================
# Google OAuth (Optional)
# ==========================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback
VITE_GOOGLE_CLIENT_ID=

# ==========================================
# Logging Configuration
# ==========================================
LOG_LEVEL=info

# ==========================================
# Frontend Configuration
# ==========================================
# API URL that frontend will use to connect to backend
VITE_API_BASE_URL=http://localhost:5000
